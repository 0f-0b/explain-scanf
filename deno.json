{
  "compilerOptions": {
    "noImplicitOverride": true,
    "useUnknownInCatchVariables": true
  },
  "fmt": {
    "files": {
      "exclude": [
        "dist"
      ]
    }
  },
  "lint": {
    "files": {
      "exclude": [
        "dist"
      ]
    }
  },
  "tasks": {
    "lint": "deno fmt --check && deno lint && deno check --remote --lock=lock.json --lock-write main.ts scripts/build.tsx scripts/generate_import_map.ts",
    "static:lint": "deno check --import-map=static/import_map.json --lock=static/lock.json --lock-write static/main.tsx"
  }
}
